[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[user]
    email = caciobanu@gmail.com
    name = Catalin Ciobanu
[push]
    # https://git-scm.com/docs/git-config#git-config-pushdefault
    default = simple
[alias]
    pl = pull -p
    fe = fetch -p
    ps = push
    co = checkout
    ci = commit
    st = status
    br = branch
    df = diff
    dfs = diff --staged
    hist = log --pretty=format:'%Cred%h%Creset - %Cgreen%cr%Creset - %C(bold blue)%an <%ae>%Creset - %C(yellow)%d%Creset %s' --abbrev-commit
    fhist = log --graph --pretty=format:'%Cred%h%Creset - %Cgreen%cr%Creset - %C(bold blue)%an <%ae>%Creset - %C(yellow)%d%Creset %s' --abbrev-commit
            # log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an <%ae>]%Creset' --abbrev-commit